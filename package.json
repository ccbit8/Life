{
  "name": "life-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "mobile:start": "pnpm --filter @life/mobile start",
    "mobile:android": "pnpm --filter @life/mobile android",
    "mobile:ios": "pnpm --filter @life/mobile ios",
    "mobile:web": "pnpm --filter @life/mobile web",
    "backend:dev": "pnpm --filter @life/backend start:dev",
    "backend:build": "pnpm --filter @life/backend build",
    "backend:start": "pnpm --filter @life/backend start:prod",
    "dev": "concurrently \"pnpm backend:dev\" \"pnpm mobile:start\"",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "~5.9.2"
  }
}
